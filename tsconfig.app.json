{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", 
               "src/**/*", 
               "src/**/*.vue",
               "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false, // 确保没有禁用emit
    "module": "esnext",
    "target": "ES6",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
