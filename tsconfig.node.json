{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": false, // 确保没有禁用 emit
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "target": "es2020"// 或其他支持的目标版本
  }
  
}
